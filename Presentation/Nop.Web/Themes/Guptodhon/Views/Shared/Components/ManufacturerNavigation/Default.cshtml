@model ManufacturerNavigationModel
@if (Model.Manufacturers.Count > 0)
{
    <div class="collection-filter-block">
        <div class="collection-mobile-back"><span class="filter-back"><i class="fa fa-angle-left" aria-hidden="true"></i> back</span></div>
        <div class="collection-collapse-block open">
            <h3 class="collapse-block-title">@T("Manufacturers")</h3>
            <div class="collection-collapse-block-content">

                <div class="listbox">
                    <ul class="list nav flex-column">
                        @foreach (var manufacturer in Model.Manufacturers)
                        {
                            <li class="@(manufacturer.IsActive ? "active" : "inactive") nav-item">
                                <a class="nav-link" href="@Url.RouteUrl("Manufacturer", new { SeName = manufacturer.SeName })">@manufacturer.Name</a>
                            </li>
                        }
                    </ul>
                    @if (Model.TotalManufacturers > Model.Manufacturers.Count)
                    {
                        <div class="view-all">
                            <a class="btn btn-primary" href="@Url.RouteUrl("ManufacturerList")">@T("Manufacturers.ViewAll")</a>
                        </div>
                    }
                </div>
            </div>
            </div>
        </div>

            }
