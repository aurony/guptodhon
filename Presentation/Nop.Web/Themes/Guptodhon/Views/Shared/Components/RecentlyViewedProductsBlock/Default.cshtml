@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="theme-card">
        <h5 class="title-border">@T("Products.RecentlyViewedProducts")</h5>
        <div class="offer-slider slide-1 slick-initialized slick-slider">
            <button class="slick-prev slick-arrow" aria-label="Previous" type="button" style="">Previous</button>
            <div class="slick-list draggable">
                <div class="slick-track" style="opacity: 1; width: 1275px; transform: translate3d(-510px, 0px, 0px);">


                    @for (var i = 0; i < Model.Count; i++)
                    {
                        var product = Model[i];

                        <div class="slick-slide slick-cloned" data-slick-index="-1" aria-hidden="true" style="width: 255px;" tabindex="-1">
                            <div @(i == Model.Count - 1 ? @Html.Raw(" class=\"last\"") : null)>
                                <div style="width: 100%; display: inline-block;">

                                    @if (!string.IsNullOrEmpty(product.DefaultPictureModel.ImageUrl))
                                    {
                                        <div class="media">
                                            <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" tabindex="-1" title="@product.DefaultPictureModel.Title">
                                                <img class="img-fluid " title="@product.DefaultPictureModel.Title" src="@product.DefaultPictureModel.ImageUrl" alt="@product.DefaultPictureModel.AlternateText">
                                            </a>
                                            <div class="media-body align-self-center">
                                                <a href="@Url.RouteUrl("Product", new { SeName = product.SeName })" tabindex="-1"><h6>@product.Name</h6></a>
                                                <h4>$963.00</h4>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div><button class="slick-next slick-arrow" aria-label="Next" type="button" style="">Next</button>
        </div>
    </div>
}